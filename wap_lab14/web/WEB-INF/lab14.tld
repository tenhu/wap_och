<taglib>
    <tlib-version>1.0</tlib-version>
    <jsp-version>
        2.0
    </jsp-version>
    <short-name>Custom Tag</short-name>
    <tag>
        <name>ColorMe</name>
        <tag-class>myLab.MyLabTag</tag-class>
        <body-content>empty</body-content>
        <attribute>
            <name>foreColor</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
        <attribute>
            <name>size</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag>
</taglib>
